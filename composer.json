{
    "name": "blackcube/totp",
    "description": "Totp implementation for PHP",
    "keywords": ["totp", "2fa", "2-factor authentication", "google authenticator", "authy", "security"],
    "type" : "library",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Philippe Gaultier",
            "email": "pgaultier@gmail.com"
        }
    ],
    "require": {
        "php" : "~8.3.0",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "codeception/codeception": "~5.0",
        "codeception/module-asserts": "~2.0"
    },
    "autoload": {
        "psr-4": { "blackcube\\totp\\": "src" }
    },
    "autoload-dev": {
        "psr-4": {
            "tests\\": "tests/",
            "tests\\_generated\\": "tests/_support/_generated/",
            "tests\\Helper\\": "tests/_support/Helper/"
        }
    }
}
